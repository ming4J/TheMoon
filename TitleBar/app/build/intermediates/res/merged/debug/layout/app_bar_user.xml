<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.benpao.viewactivity.UserActivity">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_user" />


    <org.benpao.viewactivity.FloatingActionsMenuHidable
        android:id="@+id/detailed_multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/cheng"
        fab:fab_addButtonColorPressed="@color/divider"
        fab:fab_addButtonPlusIconColor="#FFFFFF"
        fab:fab_labelStyle="@style/menu_labels_style">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/cheng"
            fab:fab_icon="@drawable/ic_float_back"
            fab:fab_colorPressed="@color/divider"
            fab:fab_title="后退" />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_moveto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/cheng"
            fab:fab_icon="@drawable/ic_moveto"
            fab:fab_colorPressed="@color/divider"
            fab:fab_title="移动到" />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/cheng"
            fab:fab_icon="@drawable/ic_float_search"
            fab:fab_colorPressed="@color/divider"
            fab:fab_title="搜索" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_float_upload"
            fab:fab_colorNormal="@color/cheng"
            fab:fab_colorPressed="@color/divider"
            fab:fab_title="上传" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_newdir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            fab:fab_colorNormal="@color/cheng"
            fab:fab_icon="@drawable/ic_float_new"
            fab:fab_colorPressed="@color/divider"
            fab:fab_title="新建文件夹"
            />
    </org.benpao.viewactivity.FloatingActionsMenuHidable>

</android.support.design.widget.CoordinatorLayout>
